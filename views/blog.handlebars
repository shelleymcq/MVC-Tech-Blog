<div class="text-left">
  <h2 class="title">{{title}}</h2>
  <h6>Created by {{user.name}} on {{format_date date_created}}</h6>
  <p>{{blog_text}}</p>

  {{!-- render comments, if any --}}
  {{#if comments.length}}
    <div class="col-md-6 comment-list">
      <h5>Comments</h5>

      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          {{!-- would be nice to include user name --}}
          <p class="comment">{{comment.comment_text}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  {{/if}}
</div>

{{!-- post a comment --}}
<div>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-text">comment on this article:</label>
      <textarea class="form-input" id="comment-text" title="comment-text"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
